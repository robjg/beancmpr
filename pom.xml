<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>uk.co.rgordon</groupId>
  <artifactId>beancmpr</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Bean Compare</name>
  <description>Bean Comparison Libary</description>
  <properties>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
    <maven.test.failure.ignore>false</maven.test.failure.ignore>
    <lib.dir>${project.build.directory}/lib</lib.dir>
    <spring.framework.version>3.1.1.RELEASE</spring.framework.version>
    <log4j.version>1.2.16</log4j.version>
    <hsql.version>2.2.8</hsql.version>
  </properties>
    <distributionManagement>
  <snapshotRepository>
    <id>sonatype-nexus-snapshots</id>
    <name>Sonatype Nexus Snapshots</name>
    <url>https://oss.sonatype.org/content/repositories/snapshots</url>
  </snapshotRepository>
  </distributionManagement>
  
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.7</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>uk.co.rgordon</groupId>
      <artifactId>oj-tools</artifactId>
      <version>1.4.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>uk.co.rgordon</groupId>
      <artifactId>arooa</artifactId>
      <version>1.4.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>${log4j.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>uk.co.rgordon</groupId>
      <artifactId>oddjob</artifactId>
      <version>1.4.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hsqldb</groupId>
      <artifactId>hsqldb</artifactId>
      <version>${hsql.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>3.3</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-to-lib</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <outputDirectory>${lib.dir}</outputDirectory>
          <includeScope>compile</includeScope>
          <includeScope>runtime</includeScope>
        </configuration>
      </plugin>
     <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9.1</version>
        <executions>
          <execution>
            <goals>
              <goal>javadoc</goal>
            </goals>
            <phase>package</phase>
          </execution>
        </executions>
      </plugin>      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>assemblies</id>
            <phase>install</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <!-- Specifies the configuration file of the assembly plugin -->
          <descriptors>
            <descriptor>src/main/assembly/src-assembly.xml</descriptor>
            <descriptor>src/main/assembly/bin-assembly.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
       <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9.1</version>
        <reportSets>
          <reportSet>
            <id>html</id>
            <configuration>
              <taglets>
                <taglet>
                  <tagletClass>org.oddjob.tools.taglet.PropertyTaglet</tagletClass>
                </taglet>
                <taglet>
                  <tagletClass>org.oddjob.tools.taglet.DescriptionTaglet</tagletClass>
                </taglet>
                <taglet>
                  <tagletClass>org.oddjob.tools.taglet.ExampleTaglet</tagletClass>
                </taglet>
                <taglet>
                  <tagletClass>org.oddjob.tools.taglet.RequiredTaglet</tagletClass>
                </taglet>
              </taglets>
              <tagletArtifact>
                    <groupId>uk.co.rgordon</groupId>
                    <artifactId>oj-tools</artifactId>
                    <version>1.4.0-SNAPSHOT</version>
              </tagletArtifact>            
            </configuration>
            <reports>
              <report>javadoc</report>
            </reports>
          </reportSet>
          <reportSet>
            <id>reference</id>
            <configuration>
              <doclet>org.oddjob.doclet.ManualDoclet</doclet>
              <docletPath>${project.build.directory}/test-classes</docletPath>
              <docletArtifact>
                <groupId>uk.co.rgordon</groupId>
                <artifactId>oj-tools</artifactId>
                <version>1.4.0-SNAPSHOT</version>
              </docletArtifact>
              <show>private</show>
              <additionalparam>
                  -d ${project.build.directory}/site/reference
                  -dp ${project.build.outputDirectory}
              </additionalparam>
              <destDir>reference</destDir>

              <!-- For the project-reports page-->
              <name>Reference</name>
              <description>The reference.</description>

              <useStandardDocletOptions>false</useStandardDocletOptions>
            </configuration>
            <reports>
              <report>javadoc</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>
</project>